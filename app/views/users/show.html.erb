<div id = "user-page">
  <% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
       <h1><%= @user.name %></h1>
        <br>
       <ul>
          User <%= @user.id %>
          <br>
          <%= @user.email %>
          <br>
          <%= @user.posts.count %> reviews
        <br>
        <img class = "profpic" src = "<%= @user.image_url%>">
      </ul>
      </section>
    </aside>
  </div>
</div>

