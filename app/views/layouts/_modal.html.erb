<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title" id="myModalLabel">Welcome to Vista.</h4>
            </div>

            <div class="modal-body">
                <!-- All of your modal/form stuff goes here. -->
            <div class="modal-body">
            <div class="well">
              <ul class="nav nav-tabs">
                <li class="active"><a href="#login" data-toggle="tab">Login</a></li>
                <li><a href="#create" data-toggle="tab">Register</a></li>
              </ul>

              <div id="myTabContent" class="tab-content">
                <div class="tab-pane active in" id="login">
                      <!--You want to keep the stuff above so you can toggle between Login and Register. -->
                    <!-- Sessions.new.html.erb below; render as partial. -->
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">

                    <%= form_for(:session, url: sessions_path) do |f| %>

                        <%= f.label :email %>
                        <%= f.email_field :email, class: 'form-control' %>

                        <%= f.label :password %>
                        <%= f.password_field :password, class: 'form-control' %>

                        <%= f.label :remember_me, class: "checkbox inline" do %>
                        <%= f.check_box :remember_me %>
                        <span>Remember me on this computer</span>
                        <% end %>

                        <%= f.submit "Log in", class: "btn btn-primary" %>
                    <% end %>
                    <!-- Eventually get rid of this below -->
                    <p>New to Vista? <%= link_to "Sign up now!", new_user_path %></p>
                    </div>
                </div>

                </div>

                <div class="tab-pane fade" id="create">

                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                    <%= form_for User.new do |f| %>

                          <%= f.label :name %>
                          <%= f.text_field :name, class: 'form-control' %>

                          <%= f.label :email %>
                          <%= f.email_field :email, class: 'form-control' %>

                          <%= f.label :password %>
                          <%= f.password_field :password, class: 'form-control' %>

                          <%= f.label :password_confirmation, "Confirmation" %>
                          <%= f.password_field :password_confirmation, class: 'form-control' %>

                          <%= link_to "Sign up now!", new_user_path %>
                          <%= button_to "Registration", new_user_path %>
                          <%= f.submit "Create my account", class: "btn btn-primary" %>
                          <!-- You need to be calling the GET restful route on new_user_path.
                          When you register, you are creating a new user. -->

                    <% end %>
                    </div>
                </div>

                </div>

            </div>
        </div>
    </div>
</div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
    </div>
  </div>
</div>
