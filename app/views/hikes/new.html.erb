<h1>Add a hike below!</h1>

<%= form_for(@hike) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>

  <button type="button" id = "add-hike" class="btn btn-success" ><%= f.submit %></button>
<% end %>
